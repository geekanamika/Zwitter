<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="TextAppearance.Title" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_18sp</item>
            <item name="android:textColor">@color/primaryTextColor</item>
        </style>

        <style name="TextAppearance.Large" parent="@android:style/TextAppearance">
            <item name="android:textSize">24sp</item>
            <item name="android:textColor">@color/primaryTextColor</item>
        </style>

        <style name="TextAppearance.Title.White" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_18sp</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

        <style name="TextAppearance.Title.Light" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_18sp</item>
            <item name="android:textColor">@color/color_secondary_text</item>
        </style>

        <style name="TextAppearance.Toolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
            <item name="android:textSize">@dimen/txt_24sp</item>
        </style>

        <style name="TextAppearance.Second" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_14sp</item>
            <item name="android:textColor">@color/color_secondary_text</item>
        </style>

        <style name="TextAppearance.Second.Light" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_12sp</item>
            <item name="android:textColor">@color/color__hint_text</item>
        </style>

        <style name="TextAppearance.Highlight" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_14sp</item>
            <item name="android:textColor">@color/colorPrimary</item>
        </style>

        <style name="TextAppearance.Second.Dark" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_14sp</item>
            <item name="android:textColor">@color/primary_dark</item>
        </style>

        <style name="TextAppearance.MainTitle" parent="@android:style/TextAppearance">
            <item name="android:textSize">32sp</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

        <style name="TextAppearance.Counter" parent="@android:style/TextAppearance">
            <item name="android:textSize">@dimen/txt_18sp</item>
            <item name="android:textColor">@color/primary_dark</item>
        </style>

        <style name="positive_button" parent="Base.Widget.AppCompat.Button">
            <item name="android:layout_width">@dimen/follow_button_width</item>
            <item name="android:background">@drawable/bg_positive_button</item>
            <item name="android:layout_height">@dimen/follow_button_height</item>
            <item name="android:textSize">@dimen/txt_12sp</item>
            <item name="android:textColor">#FFF</item>
        </style>

    <style name="negative_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/follow_button_width</item>
        <item name="android:background">@drawable/bg_negative_button</item>
        <item name="android:layout_height">@dimen/follow_button_height</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
